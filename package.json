{
    "name": "clemovitch.com",
    "homepage": "https://clemovitch.com",
    "repository": "github:LyanisSouidi/clemovitch.com",
    "scripts": {
        "build": "hugo && npx tailwindcss -o public/css/style.css"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "bracketSameLine": true,
        "bracketSpacing": true,
        "singleAttributePerLine": false,
        "arrowParens": "avoid",
        "endOfLine": "lf",
        "singleQuote": true,
        "printWidth": 120,
        "plugins": [
            "prettier-plugin-tailwindcss",
            "prettier-plugin-go-template"
        ],
        "overrides": [
            {
                "files": [
                    "*.html"
                ],
                "options": {
                    "parser": "go-template"
                }
            }
        ]
    },
    "devDependencies": {
        "@iconify/json": "^2.2.193",
        "@iconify/tailwind": "^0.1.4",
        "autoprefixer": "^10.4.18",
        "postcss": "^8.4.36",
        "postcss-cli": "^11.0.0",
        "postcss-import": "^16.0.1",
        "prettier": "^3.2.5",
        "prettier-plugin-go-template": "^0.0.15",
        "prettier-plugin-tailwindcss": "^0.5.12",
        "tailwindcss": "^3.4.1"
    }
}
